<%- include('header') %>
<section id="contact" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4">Contact Me</h2>
    <form
      action="mailto:chris.panetta@ontariotechu.net"
      method="post"
      enctype="text/plain"
      class="row g-3"
    >
      <div class="col-md-6">
        <label for="name" class="form-label">Name:</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          placeholder="Add Name Here"
          required
        />
      </div>

      <div class="col-md-6">
        <label for="email" class="form-label">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          placeholder="Add Email Here"
          required
        />
      </div>

      <div class="col-md-6">
        <label for="phone" class="form-label">Phone:</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          class="form-control"
          placeholder="Add Phone Number Here"
          required
        />
      </div>

      <div class="col-12">
        <label for="comments" class="form-label">Comments:</label>
        <textarea
          id="comments"
          name="comments"
          rows="5"
          class="form-control"
          placeholder="Add Comments Here"
        ></textarea>
      </div>

      <div class="col-md-6">
        <label for="where" class="form-label"
          >How did you find this form?</label
        >
        <select name="where" class="form-select" id="where">
          <option value="DF">Default</option>
          <option value="TA">You're the TA</option>
          <option value="Prof">You're the Prof</option>
          <option value="Fr/Fa">You're a Friend or Family</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <div class="col-md-6 d-flex align-items-center">
        <label for="bsf" class="form-check-label me-2">
          Am I your Best Friend Forever?</label
        >
        <input type="checkbox" name="bsf" id="bsf" class="form-check-input" />
      </div>

      <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
      </div>
    </form>
  </div>
</section>
<%- include('footer') %>
